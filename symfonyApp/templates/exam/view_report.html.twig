{% extends 'base.html.twig' %}

{% block title %}Exam Report{% endblock %}

{% block body %}
    <h1>Exams report</h1>

    <hr>

    <div class="row">
        <div class="col-md-8">
            <h3> {{ examForTeacher.name }}</h3>
            <p> <b> Created on: </b> {{ examForTeacher.openDate ? examForTeacher.openDate|date('d-m-Y') : '' }}</p>
        </div>
        <div class="col-md-4" style="text-align: right">
            <a class="btn btn-dark btn-md" href="{{path('exam_show', {'id': examForTeacher.id})}}">View Exam</a>
        </div>
    </div>
    <br><br>
    <h5 style="font-style: italic; font-weight: bold">List of students</h5>
    <table class="table" style="width: 100%">
        <thead>
        <tr>
            <th>Student Name</th>
            <th>Grade</th>
            <th>Status</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for exam in examForStudent %}
            <tr>
                <td style="text-align: center;">{{ exam.user.name }}</td>
                <td style="text-align: center;">{{ exam.result }}</td>
                <td style="text-align: center;">{{ exam.status }}</td>
                <td style="text-align: center;">
                    <a class="btn btn-block btn-info" href="{{ path('result_exam', {'id': exam.exam.id, 'studentId': exam.user.id})}}">View</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}