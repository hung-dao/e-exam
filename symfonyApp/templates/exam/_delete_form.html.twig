<form style="display: inline-block"  method="post" action="{{ path('exam_delete', {'id': exam.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exam.id) }}">
    <button class="btn btn-danger">{{ button_label | default('Delete') }}</button>
</form>
