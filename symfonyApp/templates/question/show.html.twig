{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>
    <hr>

    {{ question.questionText }}
    <h4>Category: </h4>
    {{ question.category.categoryName }}
    <h4>Answers:</h4>
    <div class="table-responsive">
        <table class="table table-striped" style="width: 70%">
        {% for answer in question.answers %}
            <tr>
                <td>
                    {{ answer.answerText }}
                </td>
                <td>
                    <input disabled type="checkbox" name="correct" data-toggle="tooltip" data-placement="top" title="Correct answer" {% if answer.isCorrect ==1 %} value=true checked {% endif %}><br>
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>
    <a class="btn btn-sm btn-default" href="{{ path('question_index') }}">Back to list</a>

    <a class="btn btn-sm btn-default" href="{{ path('edit_question', {'id': question.id}) }}">Edit</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
