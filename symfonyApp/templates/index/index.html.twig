{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/login.css') }}" />
{% endblock %}
{% block body %}

<h2>E-Exam </h2>
<hr>

<div class="login-block">
    <h2 style="text-align: center ; margin-bottom: 20px"> Login <i class="fa  fa-sign-in"></i> </h2>


    <form action="{{ path('login') }}" method="POST" class="loginform">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Username" id="username" name="_username" value="{{ last_username }}"/><br>
        </div>
        <div class="form-group">
            <input class="form-control" type="password" placeholder="Password" id="password" name="_password" /> <br>
        </div>
        <button class="btn btn-lg btn-block btn-primary" type="submit">LOGIN</button>
    </form>

    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</div>
{% endblock %}
